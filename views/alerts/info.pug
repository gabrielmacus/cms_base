
style.
    #info {
        background-color: #2F6FAD;
        color: white;
        animation-name: infoalert;
        animation-duration: 1s;
        animation-iteration-count: infinite;
        animation-direction: alternate;

        z-index: 10000;
    }
    @keyframes infoalert {

        100%{background-color: #19469D}

    }
script.
     $(document).ready(function(){


             var infoMsg = Cookies.get('infomsg');

         //https://github.com/js-cookie/js-cookie

         if(infoMsg)
         {

             var infoContainer=$("#info");

             infoContainer.slideDown('fast');
             infoContainer.find("h3 span").html(infoMsg);

         }

         $("#close-info").click(function(e){

             var target = $(e.target).closest(".info-color");
             target.slideUp('fast');
             console.log("removing info");
             Cookies.remove('infomsg', {path: '/'});
         });


     });



.w3-center.info-color#info(style="width:100%;display:none")
    h3
     span
     #close-info.w3-right.w3-margin-right &times;

